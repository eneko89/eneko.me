{
  "name": "eneko.me",
  "private": "true",
  "description": "My personal web page.",
  "author": "Eneko <contact@eneko.me>",
  "version": "0.1.0",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && node server.js",
    "dev": "npm run build && (npm run watch & npm run nodemon)",
    "nodemon": "nodemon -r dotenv/config server.js -w server.js -x 'eslint server.js && node'",
    "eslint": "eslint 'assets/js/**/*.js'",
    "build:assets": "mkdir -p dist && cp -r assets/{fonts,img,*.ico,*.html} dist",
    "build:js": "mkdir -p dist/js && npm run eslint && terser assets/js/scripts.js -m -c -o dist/js/scripts.min.js",
    "build:css": "mkdir -p dist/css && cleancss --skip-rebase assets/css/styles.css -o dist/css/styles.min.css",
    "build:fprints": "cachekill -r -l 8 -s dist/{js,css}/*.min.{js,css} dist/{fonts,img,*.ico} -t dist/**/*.{js,css,html}",
    "build": "rm -rf dist && (npm run build:assets &  npm run build:js & npm run build:css & wait) && npm run build:fprints",
    "watch": "onchange 'assets/**/*' -- npm run build"
  },
  "dependencies": {
    "express": "~4.17.1",
    "morgan": "~1.10.0",
    "compression": "~1.7.4",
    "body-parser": "~1.19.0",
    "nodemailer": "~6.4.13",
    "terser": "~5.5.1",
    "clean-css-cli": "~4.3.0",
    "eslint": "~7.17.0",
    "cachekill": "~1.0.2"
  },
  "devDependencies": {
    "dotenv": "~8.2.0",
    "nodemon": "~2.0.7",
    "onchange": "~7.1.0"
  },
  "engines": {
    "node": "13.8.0",
    "npm": "6.13.7"
  }
}
